<div class = "container">
  <div class = "row">
    <h4>商品一覧</h4>

    <div class="text-right index-new">
    <%= link_to new_admin_item_path do %>
      <button type="button" class="btn btn-outline-secondary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
    <% end %>
    </div>

    <table class = "table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>販売ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.non_taxed_price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active %></td>
        </tr>

        <% end %>
      </tbody>


    </table>

  </div>
</div>
