<div class="container">
  <div class="row">
      <h4>商品新規登録</h4>
    <div class="col-xs-9 mx-auto">

      <%= form_with model: @Item, url:'/admin/items', local:true do |f| %>
      <table>

        <%#= attachment_image_tag @item, :image, class: "img-square", fallback: "no-image.jpeg", size:"300x300" %>
        <tr>
          <td><%= f.label :商品画像 %></td>
　　　    <td><%= f.attachment_field :image, placeholder: "商品画像" %></td>
        </tr>

        <tr>
          <td><%= f.label :商品名 %></td>
          <td><%= f.text_field :name, autofocus: true, autocomplete: "item_name" ,class: "col-xs-8"%></td>
        </tr>

        <tr>
          <td><%= f.label :商品説明 %></td>
          <td><%= f.text_area :description, autofocus: true, autocomplete: "description" ,class: "col-xs-8"%></td>
        </tr>

        <tr>
          <td><%= f.label :ジャンル %></td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
          <!-- f.collection_select(プロパティ名, オブジェクトの配列, value属性の項目, 表示テキストの項目) -->
          <!-- Genre.allでジャンルのテーブル内情報を持ってきてる -->
        </tr>

        <tr>
          <td><%= f.label :税抜価格 %></td>
          <td><%= f.text_field :non_taxed_price, autofocus: true, autocomplete: "non_taxed_price" ,class: "col-xs-8"%></td>
        </tr>

        <tr>
          <td><%= f.label :販売ステータス %></td>
          <td><%= f.select :is_active, ["販売中", "販売停止中"] ,class: "btn btn-primary"%></td>
        </tr>
      </table>
        <div class="text-left"><%= f.submit "新規登録",class: "btn btn-primary"%></div>
      <% end %>
    </div>
  </div>
</div>
