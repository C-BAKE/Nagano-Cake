<div class='container'>
  <h2>商品詳細</h2>
    <div class='row'>
  		<div class='col-md-4'>
        <%= attachment_image_tag(@item, :image, size: "300x300", fallback: "no-image.jpeg") %>
      </div>

      <div class='col-md-8'>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>

          <td>商品説明</td>
          <td><%= @item.description %></td>

          <td>ジャンル</td>
          <!--<td><%#= @item.genre_id %></td>-->

          <td>税抜価格</td>
          <td><%= @item.non_taxed_price %></td>

          <td>販売ステータス</td>
          <td><%= @item.is_active %></td>

          <td><%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success" %></td>

        </tr>
      </div>

  </div>
</div>