<div class="container">
  <div class="row ">
    <h3>ジャンル一覧・追加</h3></br>


    <%= form_with model: @genre, url: '/admin/genres', local: true do |f| %>

      <div style="display: flex;">
      <h6 style="margin: 0 60px 30px 0;">ジャンル名</h6>
      <h4><%= f.text_field :name %></h4>
      <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>


    <% end %>

    <br>
    <table class = "table table-hover">
      <thead>
      <th>ジャンル</th>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id) ,class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

