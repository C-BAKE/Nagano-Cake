<div class="container takasa">
  <div class="row">
    <!--<h2>管理者画面</h2>-->
  </div>
  <div class="row today-order">
    <!--<br>-->
    <!--<p>本日の注文件数:　<%#= @order.count %>件</p>-->
    <!--<br>-->

  <h3>注文履歴一覧</h3><br>
	<table class="table table-hover">
	  <tr class="active">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th></th>
    </tr>
    <% @order.each do |order| %>
    <tr>
      <td><%= link_to order.created_at, admin_order_path(order) %></td>
      <td><%= order.end_user.last_name %><%= order.end_user.first_name %></td>
      <td><%= order.ordered_items.sum(:quantity) %></td>
      <td><%= order.order_status %></td>
    </tr>
    <% end %>
  </table>
  </div>
</div>