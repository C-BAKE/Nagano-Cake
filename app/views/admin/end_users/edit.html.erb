<div class="container takasa">

  <h1><%= @end_user.last_name %><%= @end_user.first_name %>さんの会員詳細</h1>

  <div class="row">
    <%= form_for(@end_user, url:admin_end_user_path) do |f| %>
    <div class="col-xs-10">
      <div class="field">
        <%= f.label :会員ID ,class: "col-xs-3"%>
        <%= f.text_field: end_user.id %>
      </div><br>

      <div class="field">
        <%= f.label :名前 ,class: "col-xs-3"%>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div><br>

      <div class="field">
        <%= f.label :フリガナ,class: "col-xs-3" %>
        <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
        <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
      </div><br>

      <div class="field">
        <%= f.label :郵便番号 ,class: "col-xs-3"%>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code"%>
      </div><br>
      <div class="field">
        <%= f.label :住所 ,class: "col-xs-3"%>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" ,size: "50"%>
      </div><br>


      <div class="field">
        <%= f.label :電話番号 ,class: "col-xs-3"%>
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number"%>
      </div><br>

      <div class="field">
        <%= f.label :メールアドレス ,class: "col-xs-3"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
      </div><br>
      <!-- ラジオボタンの記述 -->
      <div class="field text-left">
        <label><%= f.radio_button :is_deleted, "有効" ,checked: "checked"%> 有効会員 </label>
        <label><%= f.radio_button :is_deleted, "無効" %> 退会済み</label>
      </div>
      <div class="text-right"><%= f.submit "変更を保存する", class:"btn btn-primary" %></div>
      <% end %>
    </div>
  </div>