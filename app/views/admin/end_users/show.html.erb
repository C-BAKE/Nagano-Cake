<div class="container takasa">
  <h2><%= @end_user.last_name %><%= @end_user.first_name %>さんの会員詳細</h2><br>

  <table class="table">
	  <tr>
      <th>会員ID</th>
      <td><%= @end_user.id %>
      <% if @end_user.is_deleted == "有効" %>
        <div class="label label-primary">有効会員</div>
      <% else %>
        <div class="label label-danger">退会済み</div>
      <% end %>
      </td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @end_user.last_name %><%= @end_user.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @end_user.kana_last_name %><%= @end_user.kana_first_name %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @end_user.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @end_user.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @end_user.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @end_user.email %></td>
    </tr>
  </table>
    <%= link_to "編集する", edit_admin_end_user_path(@end_user), class:"btn btn-primary" %>
    <%= link_to "注文履歴一覧", admin_top_path(@end_user.id), class:"btn btn-primary" %>
</div>
