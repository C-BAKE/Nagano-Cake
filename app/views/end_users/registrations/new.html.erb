<div class = "container">
  <div class = "row">
    <div class = "col-xs-9">
    <h2 style="width: 250px;background-color: #f0f6da; text-align: center;">新規会員登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "end_users/shared/error_messages", resource: resource %>
      
     <table>
      <tr>
        <td><%= f.label :last_name, "名前" %></td>
        <td><%= f.label :last_name, "（姓）" %></td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
        <td><%= f.label :first_name, "（名）　" %></td>
        <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
      </tr>
      <tr>
        <td><%= f.label :kana_last_name, "フリガナ" %></td>
        <td><%= f.label :kana_last_name, "（セイ）" %></td>
        <td><%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %></td>
        <td><%= f.label :kana_first_name, "（メイ）" %></td>
        <td><%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %></td>
      </tr>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
    
      <tr>
        <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
        <td></td>
        <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
      </tr>
    
      <tr>
        <td><%= f.label :address, "住所" %></td>
        <td></td>
        <td colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "address", class: "w-100" %></td>
      </tr>
    
      <tr>
        <td><%= f.label :telephone_number,"電話番号（ハイフンなし）" %></td>
        <td></td>
        <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
      </tr>
    
      <tr>
       <td> <%= f.label :password, "パスワード（６文字以上）" %></td>
       <td></td>
         <% if @minimum_password_length %>
        <% end %>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
    
      <tr>
        <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </table>
      <div class="actions text-center">
        <%= f.submit "新規登録", class: "btn btn-success " %>
      </div>
    <% end %>
    
    </div>
  </div>
  <div class = "row">  
    <h4 style="width: 180px;background-color: #f0f6da; text-align: center;">既に登録済の方</h4>
  </div>
  <div class = "row">  
    <%= link_to "こちら", new_session_path(resource_name) %><span>からログインしてください。</span>
 </div>
</div>