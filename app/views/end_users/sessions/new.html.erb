<div class = "container">
  <div class = "row m-4">
    <div class = "col-xs-9 m-4">
      <h4>ログイン</h4>
      <h5>会員の方はこちらからログイン</h5>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
        </table>
        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-primary " %>
        </div>
     </div>
  </div>
      <% end %>
  <div class = "row m-4">    
      <h4>会員登録がお済みでない方</h4>
  </div>
  <div class = "row m-4">  
      <%= link_to "こちら", new_registration_path(resource_name) %><span>から新規登録を行ってください。</span>
  </div>
</div>
