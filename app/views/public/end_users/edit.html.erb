<div class="container takasa">

  <h2><i class="fas fa-user-edit"></i>登録情報編集</h2><br>

    <%= form_for (@end_user), url:update_path do |f| %>
    <table>
    <!--<div class="row user_edit">-->

      <tr>
        <td><%= f.label :"名前" %></td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= f.label :"フリガナ" %></td>
        <td><%= f.text_field :kana_last_name %></td>
        <td><%= f.text_field :kana_first_name %></td>
      </tr>
      <tr>
        <td><%= f.label :"メールアドレス" %></td>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <td><%= f.label :"電話番号" %></td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td><%= f.label :郵便番号 %></td>
        <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
      </tr>
      <tr>
        <td><%= f.label :住所 %></td>
        <td><%= f.text_field :address, autofocus: true, autocomplete: "address"%></td>
      </tr>
    </table>
    <div class="row">
      <div class="col-xs-3 mr-5">
        <%= f.submit "編集内容を保存" ,class:"btn btn-primary" %>
        <% end %>
      </div>
      <div class="col-xs-3">
        <%=button_to "退会する", confirm_unsubscribe_path, method: :get, class: "btn btn-danger" %>
      </div>
    </div>
</div>