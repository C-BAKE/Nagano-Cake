<div class="container takasa">
	<h2><i class="fas fa-box-open"></i>注文履歴詳細</h2><br>
	<div class="row">
		<div class="col-xs-6">
			<p>注文情報</p>
			<table align="left" class="table table-bordered">
				<tr>
					<td class="bg-light">注文日</td>
					<td .bg-secondary><%= @order.created_at.strftime('%Y/%m/%d') %></td>
				</tr>
				<tr>
					<td class="bg-light">配送先</td>
					<td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
				</tr>
				<tr>
					<td class="bg-light">支払方法</td>
					<td><%= @order.payment_method %></td>
				</tr>
				<tr>
					<td class="bg-light">ステータス</td>
					<td><%= @order.order_status %></td>
				</tr>
			</table>

			<p>注文内容</p>
				<table class="table table-bordered">
					 <tr class="bg-light">
						 <td>商品</td>
						 <td>単価（税込み)</td>
						 <td>個数</td>
						 <td>小計</td>
					 </tr>
				 	 <% @ordered_item.each do |ordered_item| %>
					 <tr>
						 <td><%= ordered_item.item.name %></td>
						 <td><%= ordered_item.price %></td>
						 <td><%= ordered_item.quantity %></td>
						 <td><%= (ordered_item.price*ordered_item.quantity) %>
							 <% @total += (ordered_item.price*ordered_item.quantity) %>
						 </td>
					</tr>
					<% end %>
				</table>
			</div>
			<div class="col-xs-6 ml-5">
				<div class="row">
				  <br><p>請求情報</p>
				  <table class="table table-bordered">
					<tr>
						<td class="bg-light">商品合計</td>
						<th><%= @total %></th>
					</tr>
					<tr>
						<td class="bg-light">配送料</td>
						<th>800</th>
					</tr>
					<tr>
						<td class="bg-light">ご請求額</td>
						<th><%= @total + 800 %></th>
					</tr>
				  </table>
		        </div>
		</div>
	</div>
</div>